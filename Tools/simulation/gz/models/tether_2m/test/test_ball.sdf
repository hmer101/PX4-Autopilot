<?xml version="1.0" ?>
<sdf version="1.9">
  <world name="ball_joint_world">
    <gravity>0 0 -0</gravity>

    <!-- Two-link model -->
    <model name="two_links_ball">
      <pose>0 0 0.5 0 0 0</pose>
      <static>false</static>

      <!-- link1 -->
      <link name="link1">
        <pose>0 0 0.5 0 0 0</pose>
        <inertial>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.001</ixx><iyy>0.001</iyy><izz>0.001</izz>
          </inertia>
        </inertial>
        <collision name="c1">
          <geometry><cylinder><radius>0.02</radius><length>0.2</length></cylinder></geometry>
        </collision>
        <visual name="v1">
          <geometry><cylinder><radius>0.02</radius><length>0.2</length></cylinder></geometry>
        </visual>
      </link>

      <!-- link2 -->
      <link name="link2">
        <pose>0 0 0.3 0 0 0</pose>
        <inertial>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.001</ixx><iyy>0.001</iyy><izz>0.001</izz>
          </inertia>
        </inertial>
        <collision name="c2">
          <geometry><cylinder><radius>0.02</radius><length>0.2</length></cylinder></geometry>
        </collision>
        <visual name="v2">
          <geometry><cylinder><radius>0.02</radius><length>0.2</length></cylinder></geometry>
        </visual>
      </link>

      <!-- Ball (spherical) joint -->
      <joint name="ball_joint" type="ball">
        <parent>link1</parent>
        <child>link2</child>

        <!-- For ball joints, xyz is ignored for orientation, but the FIRST axis
             is used to read dynamics for all 3 DoFs in newer Gazebo+DART. -->
        <axis>
          <xyz>0 0 1</xyz>
          <dynamics>
            <damping>0.02</damping>
          </dynamics>
        </axis>
      </joint>
    </model>
  </world>
</sdf>
